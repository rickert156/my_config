# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 10
	output_format = "i3bar"
}

# –û–±—ä–µ–¥–∏–Ω–µ–Ω–∏–µ –≤—Å–µ—Ö –±–ª–æ–∫–æ–≤ –≤ —Å—Ç—Ä–æ–∫—É –≤—ã–≤–æ–¥–∞
order += "volume master"
order += "ethernet _first_"
order += "memory"
order += "tztime local"

# New version:
# –û–ø–µ—Ä–∞—Ç–∏–≤–Ω–∞—è –ø–∞–º—è—Ç—å: —Ç–µ–∫—É—â–∏–π —Ä–∞—Å—Ö–æ–¥ –∏ –æ–±—â–∞—è —ë–º–∫–æ—Å—Ç—å
memory {
    format = "RAM: %used MB / %total MB"
    threshold_degraded = "500M"  # –ó–∞–¥–∞–µ–º –ø–æ—Ä–æ–≥, –Ω–∏–∂–µ –∫–æ—Ç–æ—Ä–æ–≥–æ —Ç–µ–∫—Å—Ç —Å—Ç–∞–Ω–µ—Ç –∂–µ–ª—Ç—ã–º
    format_degraded = "RAM: LOW - %available MB"
}

# –î–∞—Ç–∞ –∏ –≤—Ä–µ–º—è
tztime local {
    format = " %H:%M | %d-%m-%Y "
}

# –û—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ —Å–µ—Ç–∏
ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

volume master {
    format = "üéµ %volume "
    format_muted = "Ôö©  %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

